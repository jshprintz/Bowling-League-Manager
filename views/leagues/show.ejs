<%- include('../partials/header') %>

<!-- Display the individual league's details page -->

<section class="show-page">
    <h2><%= league.leagueName %> Details</h2>
    <table>
    <thead>
        <tr>
        <th></th>
        <th>Start Date</th>
        <th>Day of Week</th>
        <th>Time of Week</th>
        <th>Duration</th>
        <th></th>
        </tr>
    </thead>
    <tbody>
        <tr class="large">
        <td></td>
        <td><%= league.startDate.toLocaleDateString()  %></td>
        <td><%= league.dayOfWeek %></td>
        <td><%= convertTime(league.timeOfWeek) %></td>
        <td><%= league.duration %> weeks</td>
        <td></td>
        </tr>
    </tbody>
    </table>

<%- include('../partials/userLeagues') %>
<!-- Display all of the teams -->
<% if (league.teams.length) { %>
    <h2><%= league.leagueName %> Teams</h2>
    <table>
    <thead>
        <tr>
        <th>Created By</th>
        <th>Team Name</th>
        <th>Contact</th>
        <th>Captain</th>
        </tr>
    </thead>
    <tbody>
        <% league.teams.forEach(function(t) { %>
            <tr class="row">
                <td><img alt="Avatar" src="<%= t.userAvatar %>" referrerpolicy="no-referrer"><%= t.userName %></td>
                <td><a href="/teams/<%= t._id %>"><%= t.teamName %></a></td>
                <td><%= t.contactName %></td>
                <td><%= t.captainName %></td>
            </tr>
        <% }); %> 
    </tbody>
    </table>
    <br><br><br>
<% } %>

</section>


<% function convertTime(time){
    let hour = parseInt(time.substring(0,2))
    let minute = time.substring(3,5)
    if (hour > 12) {
        hour -= 12;
        return `${hour}:${minute} PM`;
    } else {
        return `${hour}:${minute} AM`
    }
} %> 

<%- include('../partials/footer') %>