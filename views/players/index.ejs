<%- include('../partials/header') %>
<section class="show-page">
<h1>List o' Players</h1>

<table id="player-list">
    <thead>
        <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Average</th>
        </tr>
    </thead>
    <tbody>
        <% console.log(players, "PLAYERS in VIEW") %> 
        <% for(let i=0; i < players.length; i++) { %>
            <tr>
                <td><%= players[i].name %></td>
                <td><%= players[i].email %></td>
                <td><%= players[i].avg %></td>
                <% console.log(players[i], "PLAYERS in VIEW") %> 
                <td>
                    <% if (user) { %>
                    <form action="/players/<%= players[i]._id %>?_method=DELETE" method="POST">
                      <button type="submit">X</button>
                    </form>
                    <% } %>
                </td>
            </tr>
        <% }; %> 
    </tbody>
    </table>
</section>
<%- include('../partials/footer') %>