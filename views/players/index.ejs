<%- include('../partials/header') %>
<%- include('../partials/userPlayers') %>


    <h1>List o' Players</h1>

<table id="player-list">
    <thead>
        <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Average</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i=0; i < players.length; i++) { %>
            <tr class="row">
                <td><%= players[i].name %></td>
                <td><%= players[i].email %></td>
                <td class="center"><%= players[i].avg %></td>
                <% if (user) { %>
                <td>
                <form action="/players/<%= players[i]._id %>?_method=DELETE" method="POST">
                    <button type="submit">X</button>
                </form>
                </td>
                <% } %>
            </tr>
        <% }; %> 
    </tbody>
    </table>
<br><br>
<%- include('../partials/footer') %>