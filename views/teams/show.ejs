<%- include('../partials/header') %>

<section class="show-page">
    <h2><%= team.teamName %> Details</h2>
    <form action="/leagues/<%= league.id %>"
        class="edit-form" method="GET" id="back-to-league-btn">
        <button type="submit" class="button-82-pushable">
            <span class="button-82-shadow"></span>
            <span class="button-82-edge"></span>
            <span class="button-82-front text">
            <span class="large"><%= league.leagueName %></span> League Details
            </span>
        </button>
    </form>
    
<table>
    <thead>
        <tr>
        <th>Contact</th>
        <th>Contact Email</th>
        <th>Captain</th>
        <th>Captain Email</th>
        </tr>
    </thead>
    <tbody>
        <tr>   
        <td><%= team.contactName %></td>
        <td><%= team.contactEmail %></td>
        <td><%= team.captainName %></td>
        <td><%= team.captainEmail %></td>
        </tr>
    </tbody>
</table>
<%- include('../partials/userTeam') %>

<!-- Display all of the Players on the team -->
<% if (players.length) { %>
    <h2><%= team.teamName %> Players</h2>
    <table>
    <thead>
        <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Average</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i=0; i<players.length; i++) { %>
            <tr class="row"> 
                <td><a href="/players/<%= players[i]._id %> "><%= players[i].name %></a></td>
                <td><%= players[i].email %></td>
                <td><%= players[i].avg %></td>
                
                <% if (user) { %>
                <td>
                <form action="/teams/<%= team._id %>/players/<%= players[i]._id %>?_method=DELETE" method="POST">
                    <button type="submit">X</button>
                </form>
                </td>
                <% } %>
            </tr>
        <% }; %> 
    </tbody>
    </table>
<% } %>
</section>

<%- include('../partials/footer') %>